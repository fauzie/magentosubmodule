<?xml version="1.0"?>
<config>
	<sections>
		<athlete>
			<groups>
				<megamenu translate="label" module="megamenu">
					<label>Mega Menu</label>
					<frontend_type>text</frontend_type>
					<sort_order>150</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<status translate="label comment">
							<label>Enable Mega Menu</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</status>
            <home translate="label comment">
							<label>Show "Home" Link</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</home>
            <sidebar translate="label comment">
							<label>Enable Sidebar Menu</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>30</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</sidebar>
            <custom_block_id translate="label comment">
							<label>Custom Block ID</label>
							<note>Enter static block indentifier you want to use for custom menu dropdown</note>
							<frontend_type>text</frontend_type>
							<sort_order>40</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</custom_block_id>
						<additional_block_id translate="label comment">
							<label>Additional Block ID</label>
							<note>Enter static block indentifier you want to use for additional menu items</note>
							<frontend_type>text</frontend_type>
							<sort_order>50</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</additional_block_id>
					</fields>
				</megamenu>
			</groups>
		</athlete>
	</sections>
</config>
